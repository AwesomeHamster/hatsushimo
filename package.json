{
  "name": "hatsushimo",
  "version": "1.0.0",
  "description": "A QQ/Discord Bot for our FFXIV-related group (Eorzea Macrology Association)",
  "repository": {
    "type": "git",
    "url": "https://github.com/AwesomeHamster/hatsushimo.git"
  },
  "author": "Maiko Tan <maiko.tan.coding@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn lerna run build",
    "prepare:onebot": "mkdir -p accounts/$HATSUSHIMO_ONEBOT_SELF_ID && yarn onebot:decrypt",
    "start": "yarn prepare:onebot && koishi start koishi.config.js",
    "start:dev": "koishi start koishi.config.js",
    "lint": "eslint 'plugins/**/*.ts' && yarn prettier --check '**/*.{ts,js,json,md,yml}'",
    "format": "prettier --write '**/*.{js,ts,json,md,yml}'",
    "test": "yarn lerna run test",
    "prepare": "husky install",
    "================== ONEBOT ==================": "",
    "onebot:encrypt": "node ./scripts/crypt.js encrypt",
    "onebot:decrypt": "node ./scripts/crypt.js decrypt",
    "heroku-postbuild": "yarn build && echo 'downloading go-cqhttp' && node ./node_modules/koishi-plugin-gocqhttp/install.js"
  },
  "workspaces": [
    "plugins/*"
  ],
  "private": true,
  "engines": {
    "node": "~16.13.1"
  },
  "packageManager": "yarn@3.1.1",
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "quoteProps": "consistent",
    "jsxSingleQuote": false
  },
  "dependencies": {
    "@koishijs/cli": "^4.4.1",
    "@koishijs/plugin-adapter-discord": "^2.0.5",
    "@koishijs/plugin-adapter-onebot": "^4.1.4",
    "@koishijs/plugin-admin": "^1.1.0",
    "@koishijs/plugin-auth": "^1.1.0",
    "@koishijs/plugin-bind": "^1.1.0",
    "@koishijs/plugin-callme": "^1.0.2",
    "@koishijs/plugin-chat": "^1.2.2",
    "@koishijs/plugin-console": "^3.2.3",
    "@koishijs/plugin-database-mongo": "^3.0.5",
    "@koishijs/plugin-dataview": "^1.2.1",
    "@koishijs/plugin-echo": "^1.1.0",
    "@koishijs/plugin-feedback": "^1.1.0",
    "@koishijs/plugin-puppeteer": "^3.0.4",
    "@koishijs/plugin-rate-limit": "^1.1.0",
    "@koishijs/plugin-recall": "^1.1.0",
    "@koishijs/plugin-repeater": "^1.0.1",
    "@koishijs/plugin-schedule": "^4.1.0",
    "@koishijs/plugin-status": "^5.3.3",
    "@koishijs/plugin-sudo": "^1.1.0",
    "@koishijs/utils": "^5.2.0",
    "cac": "^6.7.12",
    "koishi": "^4.4.1",
    "koishi-plugin-gocqhttp": "^2.2.4",
    "koishi-plugin-image-search": "^4.0.1",
    "koishi-plugin-pics": "^8.6.0",
    "koishi-plugin-picsource-lolicon": "^8.5.0",
    "puppeteer-core": "^13.5.1",
    "schemastery": "^3.1.1"
  },
  "devDependencies": {
    "@koishijs/plugin-database-memory": "^1.0.2",
    "@koishijs/plugin-sandbox": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "eslint": "^8.11.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "typescript": "^4.6.2"
  },
  "resolutions": {
    "koishi-plugin-image-search@4.0.1": "patch:koishi-plugin-image-search@npm:4.0.1#.yarn/patches/koishi-plugin-image-search-npm-4.0.1-afad21d577"
  }
}
