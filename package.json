{
  "name": "hatsushimo",
  "version": "1.0.0",
  "description": "A QQ/Discord Bot for our FFXIV-related group (Eorzea Macrology Association)",
  "main": "cli/index.mjs",
  "repository": "git@github.com:AwesomeHamster/hatsushimo.git",
  "author": "Maiko Tan <maiko.tan.coding@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn lerna run build",
    "start": "koishi start koishi.config.js",
    "start:dev": "koishi start koishi.config.js",
    "lint": "eslint 'plugins/**/*.ts' && yarn prettier --check '**/*.{ts,js,json,md,yml}'",
    "format": "prettier --write '**/*.{js,ts,json,md,yml}'",
    "test": "yarn lerna run test",
    "prepare": "husky install"
  },
  "workspaces": [
    "plugins/*"
  ],
  "private": true,
  "engines": {
    "node": "~16.13.1"
  },
  "packageManager": "yarn@3.1.1",
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "quoteProps": "consistent",
    "jsxSingleQuote": false
  },
  "dependencies": {
    "@koishijs/cli": "^4.0.1",
    "@koishijs/plugin-adapter-discord": "^2.0.0",
    "@koishijs/plugin-admin": "^1.0.0",
    "@koishijs/plugin-bind": "^1.0.0",
    "@koishijs/plugin-callme": "^1.0.0",
    "@koishijs/plugin-console": "^2.0.0",
    "@koishijs/plugin-database-mongo": "^3.0.0",
    "@koishijs/plugin-echo": "^1.0.0",
    "@koishijs/plugin-feedback": "^1.0.2",
    "@koishijs/plugin-manager": "^1.2.0",
    "@koishijs/plugin-puppeteer": "^3.0.0",
    "@koishijs/plugin-rate-limit": "^1.0.0",
    "@koishijs/plugin-recall": "^1.0.0",
    "@koishijs/plugin-repeater": "^1.0.0",
    "@koishijs/plugin-schedule": "^4.0.0",
    "@koishijs/plugin-status": "^5.2.0",
    "@koishijs/plugin-sudo": "^1.0.0",
    "@koishijs/utils": "^5.0.0",
    "koishi": "^4.0.1",
    "koishi-plugin-image-search": "^4.0.0",
    "puppeteer-core": "^13.0.1"
  },
  "devDependencies": {
    "@koishijs/plugin-database-memory": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^8.7.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "resolutions": {
    "koishi-plugin-image-search": "patch:koishi-plugin-image-search@npm:4.0.0#.yarn/patches/koishi-plugin-image-search-npm-4.0.0-f0d6a86575"
  }
}
