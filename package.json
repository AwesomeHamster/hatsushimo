{
  "name": "hatsushimo",
  "version": "1.0.0",
  "description": "A QQ/Discord Bot for our FFXIV-related group (Eorzea Macrology Association)",
  "repository": {
    "type": "git",
    "url": "https://github.com/AwesomeHamster/hatsushimo.git"
  },
  "author": "Maiko Tan <maiko.tan.coding@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn workspaces foreach -p -j 4 run build",
    "dev": "yarn workspaces foreach -p -j 4 run dev",
    "lint": "eslint 'plugins/**/*.ts' && yarn prettier --check '**/*.{ts,js,json,md,yml}'",
    "format": "prettier --write '**/*.{js,ts,json,md,yml}'",
    "test": "yarn workspaces foreach -p -j 4 --verbose run test",
    "prepare": "husky install"
  },
  "workspaces": [
    "plugins/*",
    "packages/*"
  ],
  "private": true,
  "engines": {
    "node": "~16.13.1",
    "yarn": "^1.17.0",
    "npm": "please use yarn"
  },
  "packageManager": "yarn@3.2.0",
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "quoteProps": "consistent",
    "jsxSingleQuote": true
  },
  "devDependencies": {
    "@hamster-bot/constructeur": "*",
    "@koishijs/plugin-puppeteer": "^3.0.7",
    "@types/chai": "^4.3.1",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.0.5",
    "eslint-plugin-n": "^15.2.2",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "koishi": "^4.7.3",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3"
  }
}
